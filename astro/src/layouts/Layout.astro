---
import '../styles/global.css';
import { AppSidebar, MobileSidebar } from '../components/AppSidebar';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Bills - ZarzÄ…dzanie wydatkami</title>
		{/* Fix for Railway: set base URL without port */}
		<script is:inline define:vars={{ siteUrl: Astro.site?.href || '' }}>
			// Store correct base URL without port for Railway
			(function() {
				const currentOrigin = window.location.origin;
				// If current origin has port 8080 or 80, remove it
				if (currentOrigin.includes(':8080') || currentOrigin.includes(':80')) {
					const originWithoutPort = currentOrigin.split(':').slice(0, 2).join(':');
					window.__BASE_URL__ = siteUrl || originWithoutPort;
				} else {
					window.__BASE_URL__ = siteUrl || currentOrigin;
				}
			})();
		</script>
		<ClientRouter />
	</head>
	<body>
		<div class="flex h-screen overflow-hidden">
			<!-- Desktop Sidebar -->
			<AppSidebar client:load class="hidden lg:flex w-[250px] flex-shrink-0" />
			
			<!-- Main Content Area -->
			<div class="flex flex-1 flex-col overflow-hidden">
				<!-- Mobile TopBar -->
				<header class="lg:hidden flex h-16 items-center border-b bg-background px-4">
					<MobileSidebar client:load />
					<h1 class="ml-4 text-xl font-bold">Bills</h1>
				</header>
				
				<!-- Page Content -->
				<main class="flex-1 overflow-y-auto">
					<slot />
				</main>
			</div>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
