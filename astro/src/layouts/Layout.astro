---
import '../styles/global.css';
import { AppSidebar, MobileSidebar } from '../components/AppSidebar';
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Bills - ZarzÄ…dzanie wydatkami</title>
		{/* Fix for Railway: set base URL without port */}
		<script is:inline define:vars={{ siteUrl: Astro.site?.href || '' }}>
			// Store correct base URL without port for Railway
			// Railway may forward requests with internal port (8080) in Host header
			// This script ensures URLs are generated without port
			(function() {
				// Priority 1: Use PUBLIC_SITE_URL from Astro config (set via env var)
				if (siteUrl) {
					// Remove port from siteUrl if present
					const url = new URL(siteUrl);
					if (url.port === '8080' || url.port === '80') {
						url.port = '';
					}
					window.__BASE_URL__ = url.origin;
					return;
				}
				
				// Priority 2: Use current origin but remove port if it's 8080 or 80
				const currentOrigin = window.location.origin;
				if (currentOrigin.includes(':8080') || currentOrigin.includes(':80')) {
					// Remove port: split by ':', take protocol and hostname, rejoin
					const url = new URL(currentOrigin);
					url.port = '';
					window.__BASE_URL__ = url.origin;
				} else {
					window.__BASE_URL__ = currentOrigin;
				}
			})();
		</script>
		<ClientRouter />
	</head>
	<body>
		<div class="flex h-screen overflow-hidden">
			<!-- Desktop Sidebar -->
			<AppSidebar client:load class="hidden lg:flex w-[250px] flex-shrink-0" />
			
			<!-- Main Content Area -->
			<div class="flex flex-1 flex-col overflow-hidden">
				<!-- Mobile TopBar -->
				<header class="lg:hidden flex h-16 items-center border-b bg-background px-4">
					<MobileSidebar client:load />
					<h1 class="ml-4 text-xl font-bold">Bills</h1>
				</header>
				
				<!-- Page Content -->
				<main class="flex-1 overflow-y-auto">
					<slot />
				</main>
			</div>
		</div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
